<h2>スケジュール詳細</h2>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @task.start_date %></td>
    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @task.created_at %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><% if @task.all_day %>○<% end %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.memo %></td>
    </tr>
</table>
<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        <li><%= link_to "スケジュールを編集する", "/tasks/#{@task.id}/edit"%></li>
        <li><%= link_to "スケジュールを削除", "/tasks/#{@task.id}",method: :delete, data: {confirm: "本当に削除しますか?"} %></li>
    </ul>
</div>